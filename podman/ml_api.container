[Unit]
Description=ML API Service
Requires=cph_postgres_db.service cph_postgrest.service
After=cph_postgres_db.service cph_postgrest.service

[Container]
Image=ghcr.io/simonottosen/cph-security_ml_api:main
ContainerName=ml_api
EnvironmentFile=/root/waitport/cph-security.env
Pod=cph-security.pod

[Service]
Restart=always

[Install]
WantedBy=default.target